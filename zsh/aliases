# custom history searcher
alias hst='coffee ~/Dropbox/Development/Node/history/history.coffee'

# remove conflicted files due to dropbox sync issues
alias rmconflict='find . -name "*conflicted*" -exec rm {} +'

# rails
alias dbm='rake db:migrate'
alias dbr='rake db:rollback'
alias ss='spring status'
alias sst='spring stop'

# rvm
alias ri='rvm info'
alias rc='rvm current'

# open last migration
alias lm='vim $(ls db/migrate/* | tail -n1)'

# filesystem
alias la='ls -lahG'
alias hg='history | grep '

# directory
alias dev='cd ~/Dropbox/Development'
alias repos='cd ~/Repos/'

# phtyon http server
alias http='python -m SimpleHTTPServer'

# other
alias aliases='vim ~/dotfiles/zsh/aliases'
alias so='source ~/dotfiles/zsh/aliases'

alias dokku='ssh -t dokku@digital-ocean-dokku'

# tmux
alias tls='tmux ls'
alias ta='tmux a -t'
alias tn='tmux new -s'

# git
alias gl='git log --oneline --decorate --color --graph'
alias gaa='git add -A'
alias gcod='git checkout development'
alias gcos='git checkout staging'
alias gcom='git checkout master'

alias gmd='git merge development'
alias gms='git merge staging'

# heroku
alias ds='git push staging staging:master'
alias dp='git push production master:master'

#vagrant
alias vs='vagrant status'
alias vssh='vagrant ssh'

